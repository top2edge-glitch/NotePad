        tk.Button(page_btn_frame, text="Del Page", command=self.delete_page).pack(side=tk.LEFT, fill=tk.X, expand=True)

        # Right frame: Notes area
        right_frame = tk.Frame(main_tab, padx=10, pady=10)
        right_frame.pack(side=tk.RIGHT, fill=tk.BOTH, expand=True)

        # Header
        header_frame = tk.Frame(right_frame)
        header_frame.pack(fill=tk.X, pady=(0, 5))
        header_label = tk.Label(header_frame, textvariable=self.header_var, anchor="w", font=("Arial", 11, "bold"))
        header_label.pack(side=tk.LEFT, fill=tk.X, expand=True)

        # Toolbar
        toolbar = tk.Frame(right_frame)
        toolbar.pack(fill=tk.X, pady=(0, 5))

        # Formatting Buttons
        tk.Button(toolbar, text="Bold", command=self.toggle_bold).pack(side=tk.LEFT, padx=2)
        tk.Button(toolbar, text="Italic", command=self.toggle_italic).pack(side=tk.LEFT, padx=2)
        tk.Button(toolbar, text="Underline", command=self.toggle_underline).pack(side=tk.LEFT, padx=2) 
        tk.Button(toolbar, text="Color", command=self.change_color).pack(side=tk.LEFT, padx=2)
        tk.Button(toolbar, text="Size +", command=lambda: self.change_font_size(2)).pack(side=tk.LEFT, padx=2)
        tk.Button(toolbar, text="Size -", command=lambda: self.change_font_size(-2)).pack(side=tk.LEFT, padx=2)
        
